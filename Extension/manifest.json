{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.0",
  "description": "Translate text to and from Darija using AI",
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Darija Translator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}